<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user1"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:src="@drawable/user1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFCCCCCC"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DomMorel**"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10분 전"
            android:textColor="#9C9A9A"
            android:layout_below="@+id/user_id"/>

        <RatingBar
            android:id="@+id/commentRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@+id/평점"
            android:layout_toLeftOf="@+id/점수"
            android:numStars="5"
            android:rating="3.3"
            android:max="5"
            android:stepSize="0.5"
            android:layout_toRightOf="@id/time"
            android:layout_above="@+id/comment_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="2dp"
            android:theme="@style/Ratingbar"
            />
        <TextView
            android:id="@+id/comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용 없음"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_below="@+id/time"/>

        <TextView
            android:id="@+id/추천"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_content"
            android:text="추천"
            android:textColor="#000000"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/추천수"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000000"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/추천"
            android:layout_below="@+id/comment_content"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/칸막이"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="#000000"
            android:textSize="10sp"
            android:layout_below="@+id/comment_content"
            android:layout_toRightOf="@+id/추천수"
            android:layout_marginLeft="10dp"

            />

        <Button
            android:id="@+id/신고하기버튼"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:layout_below="@+id/comment_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/칸막이"
            android:text="신고하기"
            android:textColor="#9C9A9A"
            android:gravity="left"
            android:padding="0dp"
            android:textSize="10sp" />


    </RelativeLayout>



</LinearLayout>